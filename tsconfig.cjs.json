{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./cjs",
    "rootDir": "./src",
    "removeComments": true,
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./node_modules",
    "test/**/*",
    "eslint.config.ts"
  ]
}